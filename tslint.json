{
  "extends": ["tslint-microsoft-contrib/latest", "tslint-config-prettier"],
  "rulesDirectory": [
    "node_modules/tslint-microsoft-contrib"
  ],
  "rules": {
    "class-name": true,
    "interface-name": [true, "always-prefix"],
    "encoding": true,
    "file-name-casing": [true, "camel-case"],
    "completed-docs": [true, "enums", "functions", "methods", "classes", "interfaces"],
    "jsdoc-format": true,
    "cyclomatic-complexity": [true, 20],
    "function-name": [true, {
      "method-regex": "^[a-z][\\w\\d]+$",
      "private-method-regex": "^__[a-z][\\w\\d]+$",
      "static-method-regex": "^_[a-z][\\w\\d]+$",
      "function-regex": "^[A-Z][\\w\\d]+$"
    }],
    "variable-name": [true, "ban-keywords" ],
    "detect-child-process": false
  }
}
